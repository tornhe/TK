#:kivy 1.11.1
<Start_menu>:
    canvas.before:
        Color:
            rgb: 0.25, 0.655, 0.596, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    rows: 1

    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'logo3.png'
            size: self.parent.size
            stretch: True #keep this one as well :)
            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
            x: self.parent.x
            #heigth: self.parent.width/self.image_ratio
            #heigth: self.parent.height
            width: self.parent.width
            keep_ratio: True
            allow_stretch: True

        FloatLayout:
            Button:
                text: 'Legg inn nye bets'
                #background_color: 0.1, 0.5, 0.6, 1
                background_color: 0.32, 0.55, 0.516, 1
                size_hint: 0.4, 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                on_press: root.manager.current = 'legg inn bets'

            Button:
                text: 'Legg inn resultat'
                background_color: 0.32, 0.55, 0.516, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                size_hint: 0.4, 0.2
                on_press: root.manager.current = 'legg inn resultat'
            Button:
                text: 'Sjao resultat'
                background_color: 0.32, 0.55, 0.516, 1
                size_hint: 0.4, 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Button:
                text: 'Tidlegare utgaver'
                background_color: 0.32, 0.55, 0.516, 1
                size_hint: 0.4, 0.2
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}


<legg_inn_resultat>:
    canvas.before:
        Color:
            rgb: 0.25, 0.655, 0.596, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    rows: 1

    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'logo3.png'
            size: self.parent.size
            stretch: True
            y: self.parent.y + .5* self.parent.height -.5 * self.parent.width/self.image_ratio
            x: self.parent.x
            width: self.parent.width
            keep_ratio: True
            allow_stretch: True

        Button:
            text: 'Tilbake'
            size_hint: 0.1, 0.1
            background_color: 0.32, 0.55, 0.516, 1

            on_press: root.manager.current = 'start'

