#:kivy 1.11.1

# Samling av custom modifiseringar av greier, f.eks knappar.
# Tilbake-knapp brukt som eksempel

<TilbakeBtn@Button>:
    text: ''
    markup: True
    size_hint: (None, None)
    size: (70, 70)
    background_normal: ''
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (.4,.4,.4,1) if self.state=='normal' else (0,.7,.7,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [self.size[1]//4]